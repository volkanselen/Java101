import java.util.Scanner;

public class TemelKavramlar {
    public static void main(String[] args){
        double tutar, kdv;
        String ad;


        Scanner input=new Scanner(System.in);

        System.out.print("Ürün adını Giriniz :");
        ad=input.next();
        System.out.print("Ürün tutarını giriniz :");
        tutar = input.nextDouble();

        kdv= (tutar<=1000) ? 0.18 : 0.08;


        Double a =(tutar*kdv);
        System.out.print("Girdiğiniz " + ad +" isimli ürünün KDV'si = "+ a +" dır.");












    }


}
